<%- include("partials/header") -%>


    <div class="container">
        <div class="flex-nav sidebar">
            <nav class="navi">
                <ul class="list">
                    <li>
                        <a href="#">Calender</a>
                    </li>
                    <li>
                        <a href="#">Statistics</a>
                    </li>
                    <li>
                        <a href="/logout">Log Out</a>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="dashboard">
            <div class="box" >
                <% const arr = entries.concat(works) %> 
                <h1>This is dashboard</h1>

                <h2>Welcome back <%= user.userName %></h2>

                <div class="works">
                    <h1 class="title">*Display Work (current month)*</h1>

                    <% arr.forEach(element => {%>
                        <p><%= element.title %> <br> <%= element.createdAt %> <br> <%= element.description %> </p> 
                        <br> <img class="image" src="<%= element.image %>">
                    <%})%>
                </div>

                <div class="pastWorks">
                    <h1 class="title">*Last months work*</h1>
                </div>

                <a class="viewMore" href="#">View more</a>


            </div>

            <button class="add"><a href="/new"><h1>+</h1></a></button>
        </div>
    </div>

<%- include("partials/footer") -%> 